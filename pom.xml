<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.meggermo.maven</groupId>
        <artifactId>maven.pom.root</artifactId>
        <version>1.0.5</version>
    </parent>

    <groupId>nl.meg</groupId>
    <artifactId>jcr-ops</artifactId>
    <packaging>pom</packaging>
    <version>1.0.4-functional-store-SNAPSHOT</version>

    <description>
        Functional immutable operations on the The Content repository API for Java.
    </description>
    <inceptionYear>2014</inceptionYear>
    <url>https://github.com/meggermo/jcr-ops</url>

    <licenses>
        <license>
            <name>The MIT License</name>
            <url>http://en.wikipedia.org/wiki/MIT_License</url>
        </license>
    </licenses>

    <modules>
        <module>validation-api</module>
        <module>jcr-api</module>
        <module>validation-impl</module>
        <module>jcr-impl</module>
        <module>content-repository</module>
    </modules>

    <developers>
        <developer>
            <id>meggermo</id>
            <name>Michiel Eggermont</name>
            <email>michiel.eggermont@gmail.com</email>
            <url>https://github.com/meggermo</url>
        </developer>
    </developers>

    <scm>
        <url>https://github.com/meggermo/jcr-ops</url>
        <connection>scm:git://github.com/meggermo/jcr-ops.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/meggermo/jcr-ops.git</developerConnection>
    </scm>

    <issueManagement>
        <url>https://github.com/meggermo/jcr-ops/issues</url>
        <system>github</system>
    </issueManagement>

    <ciManagement>
        <system>Travis</system>
        <url>https://travis-ci.org/meggermo/jcr-ops</url>
    </ciManagement>

    <properties>
        <!-- Library versions -->
        <jcr.version>2.0</jcr.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>javax.jcr</groupId>
                <artifactId>jcr</artifactId>
                <version>${jcr.version}</version>
            </dependency>
            <dependency>
                <groupId>nl.meg</groupId>
                <artifactId>validation-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>nl.meg</groupId>
                <artifactId>validation-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>nl.meg</groupId>
                <artifactId>jcr-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>nl.meg</groupId>
                <artifactId>jcr-impl</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>github</id>
            <name>Github repository for pom files only</name>
            <url>https://raw.githubusercontent.com/meggermo/maven.pom.root/master</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
        </repository>
    </repositories>

</project>
